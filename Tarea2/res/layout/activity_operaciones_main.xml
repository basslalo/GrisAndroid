<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/cel2"
    tools:context=".OperacionesMainActivity" >

     <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" 
        android:textColor="#F9B31E"
        android:textSize="20sp"/>
    <Button 
       	android:id="@+id/b1"
      	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv1"
        android:onClick="sigSum"
        android:text="@string/sum"
        android:textColor="#C00514"
        android:textStyle="italic"
        android:fontFamily="cursive"
        />
    <Button 
       	android:id="@+id/b2"
      	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/b1"
        android:onClick="sigRes"
        android:text="@string/res"
        android:textColor="#C00514"
        android:textStyle="italic"
        android:fontFamily="cursive"
        />
    <Button 
       	android:id="@+id/b3"
      	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/b2"
        android:onClick="sigMul"
        android:text="@string/mul"
        android:textColor="#C00514"
        android:textStyle="italic"
        android:fontFamily="cursive"
        />
    <Button 
       	android:id="@+id/b4"
      	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/b3"
        android:onClick="sigDiv"
        android:text="@string/div"
        android:textColor="#C00514"
        android:textStyle="italic"
        android:fontFamily="cursive"
        />

</RelativeLayout>
